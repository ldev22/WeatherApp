<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/partentBackground"
        android:background="@color/colorForestSunny">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mainBackground">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/weatherBackground"
            android:background="@drawable/forest_sunny">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="65sp"
                android:textColor="#ffffff"
                android:gravity="center"
                android:layout_marginTop="25dp"
                android:id="@+id/mainWeatherTemp"
                android:text="25\u00B0"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="45sp"
                android:gravity="center"
                android:text="Sunny"
                android:id="@+id/mainWeather"
                android:textColor="#ffffff"
                android:layout_below="@+id/mainWeatherTemp"/>

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/weatherData"
            android:background="@color/colorForestSunny"
            android:layout_below="@+id/weatherBackground"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/minDailyTemp"
                        android:text="19\u00B0"
                        android:textSize="28sp"
                        android:textColor="#ffffff"
                        android:paddingStart="10dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="min"
                        android:textSize="22sp"
                        android:textColor="#ffffff"
                        android:paddingStart="10dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:textAlignment="center"
                    android:layout_marginStart="100dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/currentDailyTemp"
                        android:text="25\u00B0"
                        android:textSize="28sp"
                        android:textColor="#ffffff"
                        android:paddingStart="10dp"
                        android:textAlignment="center"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Current"
                        android:textSize="22sp"
                        android:textColor="#ffffff"
                        android:paddingStart="5dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:textAlignment="center"
                    android:layout_marginStart="80dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/maxDailyTemp"
                        android:text="27\u00B0"
                        android:textSize="28sp"
                        android:textColor="#ffffff"
                        android:paddingStart="10dp"
                        android:textAlignment="center"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="max"
                        android:textSize="22sp"
                        android:textColor="#ffffff"
                        android:paddingStart="5dp"
                        />
                </LinearLayout>
            </LinearLayout>
            <View android:layout_width="match_parent"
                android:layout_height="2dp"
                android:paddingTop="2dp"
                android:background="#ffffff"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/weatherForecast"
                android:orientation="horizontal">
                <LinearLayout android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/dayOWeek1"
                        android:textSize="25sp"
                        android:paddingStart="10dp"
                        android:text="Wednesday"
                        android:textColor="#fff"
                        android:textAlignment="center"
                        android:paddingTop="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/dayOWeek2"
                        android:textSize="25sp"
                        android:paddingStart="10dp"
                        android:text="Thursday"
                        android:textColor="#fff"
                        android:textAlignment="center"
                        android:paddingTop="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/dayOWeek3"
                        android:textSize="25sp"
                        android:paddingStart="10dp"
                        android:text="Friday"
                        android:textColor="#fff"
                        android:textAlignment="center"
                        android:paddingTop="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/dayOWeek4"
                        android:textSize="25sp"
                        android:paddingStart="10dp"
                        android:text="Saturday"
                        android:textColor="#fff"
                        android:textAlignment="center"
                        android:paddingTop="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/dayOWeek5"
                        android:textSize="25sp"
                        android:paddingStart="10dp"
                        android:text="Sunday"
                        android:textColor="#fff"
                        android:textAlignment="center"
                        android:paddingTop="10dp"/>
                </LinearLayout>
                <LinearLayout android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/iconWeather1"
                        android:contentDescription="Weather Icon 1"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:background="@drawable/clear"
                        android:minWidth="1dp"
                        android:minHeight="1dp"
                        android:paddingStart="10dp"
                        android:textAlignment="center"
                        android:layout_marginStart="20dp"
                        android:paddingTop="20dp"/>
                    <ImageView
                        android:id="@+id/iconWeather2"
                        android:contentDescription="Weather Icon 2"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:background="@drawable/clear"
                        android:minWidth="1dp"
                        android:minHeight="1dp"
                        android:paddingStart="10dp"
                        android:textAlignment="center"
                        android:layout_marginStart="20dp"
                        android:paddingTop="20dp"/>
                    <ImageView
                        android:id="@+id/iconWeather3"
                        android:contentDescription="Weather Icon 3"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:background="@drawable/rain"
                        android:minWidth="1dp"
                        android:minHeight="1dp"
                        android:paddingStart="10dp"
                        android:textAlignment="center"
                        android:layout_marginStart="20dp"
                        android:paddingTop="20dp"/>
                    <ImageView
                        android:id="@+id/iconWeather4"
                        android:contentDescription="Weather Icon 4"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:background="@drawable/partlysunny"
                        android:minWidth="1dp"
                        android:minHeight="1dp"
                        android:paddingStart="10dp"
                        android:textAlignment="center"
                        android:layout_marginStart="20dp"
                        android:paddingTop="20dp"/>
                    <ImageView
                        android:id="@+id/iconWeather5"
                        android:contentDescription="Weather Icon 5"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:background="@drawable/partlysunny"
                        android:minWidth="1dp"
                        android:minHeight="1dp"
                        android:paddingStart="10dp"
                        android:textAlignment="center"
                        android:layout_marginStart="20dp"
                        android:paddingTop="20dp"/>
                </LinearLayout>
                <LinearLayout android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/forecastTemp1"
                    android:textSize="25sp"
                    android:paddingStart="10dp"
                    android:text="22\u00B0"
                    android:textColor="#ffffff"
                    android:textAlignment="textStart"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/forecastTemp2"
                        android:textSize="25sp"
                        android:paddingStart="10dp"
                        android:text="18\u00B0"
                        android:textColor="#ffffff"
                        android:textAlignment="textStart"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/forecastTemp3"
                        android:textSize="25sp"
                        android:paddingStart="10dp"
                        android:text="22\u00B0"
                        android:textColor="#ffffff"
                        android:textAlignment="textStart"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/forecastTemp4"
                        android:textSize="25sp"
                        android:paddingStart="10dp"
                        android:text="27\u00B0"
                        android:textColor="#ffffff"
                        android:textAlignment="textStart"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/forecastTemp5"
                        android:textSize="25sp"
                        android:paddingStart="10dp"
                        android:text="24\u00B0"
                        android:textColor="#ffffff"
                        android:textAlignment="textStart"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>